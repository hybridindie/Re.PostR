%h1= t('.title')
%p= link_to t('.new_photo'), new_photo_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for photo in @photos
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), photo
        %td.action= link_to t('edit'), edit_photo_path(photo)
        %td.action= link_to t('destroy'), photo, :confirm => t('are_you_sure'), :method => :delete
