%h1= t('.title')
%p= link_to t('.new_video'), new_video_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for video in @videos
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), video
        %td.action= link_to t('edit'), edit_video_path(video)
        %td.action= link_to t('destroy'), video, :confirm => t('are_you_sure'), :method => :delete
