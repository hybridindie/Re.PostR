%h1= t('.title')
%p= link_to t('.new_audio'), new_audio_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for audio in @audios
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), audio
        %td.action= link_to t('edit'), edit_audio_path(audio)
        %td.action= link_to t('destroy'), audio, :confirm => t('are_you_sure'), :method => :delete
