%h1= t('.title')
%p= link_to t('.new_gallery'), new_gallery_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for gallery in @galleries
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), gallery
        %td.action= link_to t('edit'), edit_gallery_path(gallery)
        %td.action= link_to t('destroy'), gallery, :confirm => t('are_you_sure'), :method => :delete
