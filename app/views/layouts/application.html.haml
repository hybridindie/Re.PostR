!!! 5
%html
%head
  %title Re:Postr
  = #stylesheet_link_tag("re.postr", "http://fonts.googleapis.com/css?family=Tangerine")
  = stylesheet_link_tag("re.postr", "jquery-ui-1.8.5.custom")
  = javascript_include_tag(:defaults, "jquery.colorbox-min")
  = csrf_meta_tag
%body
  %header{:id => "site_head"}
    .header_cont
      %h1= link_to("Re:Postr", root_url)
      %nav.head_nav
        %ul
          %li.rss= link_to("Subscribe", "#")
          %li.twitter= link_to("Follow Me", "#")
          %li.home= link_to("Home", root_url)
          %li= link_to("About Me", "#")
          %li= link_to("Portfolio", "#")
          %li= link_to("Contact", "#")
        
  #main_content
    = yield
      
    %footer{:class => "bottom"}
      %p Contents and resources released under General Public License (GPL).
      %p Powered By Re.PostR